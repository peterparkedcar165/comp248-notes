package tutorial_2;
import java.util.Scanner;
public class tutorial_2 {

	/* Question 1: 0 = int or byte / 0.0 = double or long / '0' = char / "0" = string */
	/* Question 2: Greetings, g, Hello, world*/
	/* Question 3: 5 / 5.0 / 3 / 3.0 / 1.0 / 1.33020344288 / 2 / 6 / 2 / 0 / 8
	/* Question 4:  [A] a) result: 3+4 b) result: 7 c) result: 34 d) result: 7
	/* Question 4:  [B] System.out.println("The file is in c:\Temp\theFile.txt")
	 * Question 4:  [C] John Q.
	 * Question 5:  new Scanner / //Print output no need for the extra bar / totalCost); / close brackets at the end
	 */ //All the prints need to be println()
	public static void main(String[] args) {
		
		double width, length, area;
		
		Scanner keyboard = new Scanner(System.in);
		System.out.println("Enter the width of the rectangle in meters: ");
		width = keyboard.nextDouble();
		System.out.println("Enter the length of the rectangle in meters: ");
		length = keyboard.nextDouble();
		area = length * width;
		System.out.println("The width of the rectangle is " + width + "m and its length is " + length + "m.");
		System.out.println("The area of the rectangle will then be " + area + "m^2.");
	}

}
